---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const models = await getCollection('models');
  return models.map((model) => ({
    params: { slug: model.id },
    props: { model },
  }));
}

const { model } = Astro.props;
const { data } = model;

// Status badge styling
const statusStyles: Record<string, string> = {
  released: 'badge-released',
  beta: 'badge-beta',
  alpha: 'badge-alpha',
  waitlist: 'badge-waitlist',
  research: 'badge-research',
};

// Category display names
const categoryNames: Record<string, string> = {
  'text-to-video': 'Text-to-Video',
  'image-to-video': 'Image-to-Video',
  'video-to-video': 'Video-to-Video',
  'animation': 'Animation',
};

// Render star rating
const renderStars = (rating: number) => {
  return Array.from({ length: 5 }, (_, i) => 
    i < rating ? '★' : '☆'
  ).join('');
};

// JSON-LD Product schema for SEO
const productSchema = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: data.name,
  description: data.description,
  applicationCategory: 'MultimediaApplication',
  operatingSystem: data.access.platform.join(', '),
  offers: {
    '@type': 'Offer',
    price: data.pricing.startingPrice ? data.pricing.startingPrice.replace(/[^0-9.]/g, '') : '0',
    priceCurrency: 'USD',
    availability: data.status === 'released' ? 'https://schema.org/InStock' : 'https://schema.org/PreOrder',
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: ((data.quality.outputQuality + data.quality.consistency + data.quality.speed) / 3).toFixed(1),
    bestRating: '5',
    worstRating: '1',
    ratingCount: '1',
  },
  provider: {
    '@type': 'Organization',
    name: data.company,
  },
};

// JSON-LD BreadcrumbList schema
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://aivideodirectory.com/',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Models',
      item: 'https://aivideodirectory.com/models/',
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: data.name,
      item: `https://aivideodirectory.com/models/${model.id}/`,
    },
  ],
};
---

<BaseLayout title={data.name} description={data.shortDescription}>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <!-- Breadcrumb -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <nav class="flex items-center gap-2 text-sm text-slate-400">
      <a href="/" class="hover:text-white transition-colors">Home</a>
      <span>/</span>
      <a href="/#models" class="hover:text-white transition-colors">Models</a>
      <span>/</span>
      <span class="text-white">{data.name}</span>
    </nav>
  </div>

  <!-- Hero Section -->
  <section class="py-8 sm:py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Main Info -->
        <div class="lg:col-span-2">
          <div class="flex items-start gap-4 mb-6">
            <div>
              <h1 class="text-3xl sm:text-4xl font-bold text-white mb-2">{data.name}</h1>
              <p class="text-xl text-slate-400">{data.company}</p>
            </div>
            <span class={`badge ${statusStyles[data.status]} mt-2`}>
              {data.status}
            </span>
          </div>
          
          <p class="text-lg text-slate-300 mb-6">
            {data.description}
          </p>
          
          <!-- Categories -->
          <div class="flex flex-wrap gap-2 mb-6">
            {data.categories.map((category: string) => (
              <a href={`/categories/${category}`} class="tag hover:bg-indigo-500/20 hover:text-indigo-400 transition-colors">
                {categoryNames[category] || category}
              </a>
            ))}
          </div>
          
          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-4">
            <a 
              href={data.access.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="btn-primary inline-flex items-center gap-2"
            >
              <span>Visit Platform</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
            {data.access.apiDocs && (
              <a 
                href={data.access.apiDocs} 
                target="_blank" 
                rel="noopener noreferrer"
                class="btn-secondary inline-flex items-center gap-2"
              >
                <span>API Docs</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              </a>
            )}
          </div>
        </div>
        
        <!-- Quick Stats Card -->
        <div class="card p-6">
          <h3 class="text-lg font-semibold text-white mb-4">Quick Stats</h3>
          
          <div class="space-y-4">
            <div class="flex justify-between items-center py-2 border-b border-slate-700/50">
              <span class="text-slate-400">Max Resolution</span>
              <span class="text-white font-medium">{data.capabilities.maxResolution}</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-slate-700/50">
              <span class="text-slate-400">Max Duration</span>
              <span class="text-white font-medium">{data.capabilities.maxDuration}</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-slate-700/50">
              <span class="text-slate-400">Frame Rate</span>
              <span class="text-white font-medium">{data.capabilities.frameRate || 'N/A'}</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-slate-700/50">
              <span class="text-slate-400">Audio Generation</span>
              <span class="text-white font-medium">{data.capabilities.audioGeneration ? 'Yes' : 'No'}</span>
            </div>
            <div class="flex justify-between items-center py-2">
              <span class="text-slate-400">Platforms</span>
              <span class="text-white font-medium capitalize">{data.access.platform.join(', ')}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quality Ratings -->
  <section class="py-8 border-y border-slate-700/50 bg-slate-800/30">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-xl font-semibold text-white mb-6">Quality Ratings</h2>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
        <div class="text-center p-4 rounded-xl bg-slate-800/50">
          <p class="text-slate-400 text-sm mb-2">Output Quality</p>
          <p class="text-3xl font-bold text-yellow-400 mb-1">{data.quality.outputQuality}/5</p>
          <p class="text-yellow-400">{renderStars(data.quality.outputQuality)}</p>
        </div>
        <div class="text-center p-4 rounded-xl bg-slate-800/50">
          <p class="text-slate-400 text-sm mb-2">Consistency</p>
          <p class="text-3xl font-bold text-yellow-400 mb-1">{data.quality.consistency}/5</p>
          <p class="text-yellow-400">{renderStars(data.quality.consistency)}</p>
        </div>
        <div class="text-center p-4 rounded-xl bg-slate-800/50">
          <p class="text-slate-400 text-sm mb-2">Speed</p>
          <p class="text-3xl font-bold text-yellow-400 mb-1">{data.quality.speed}/5</p>
          <p class="text-yellow-400">{renderStars(data.quality.speed)}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features & Pricing -->
  <section class="py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Features -->
        <div class="card p-6">
          <h2 class="text-xl font-semibold text-white mb-6">Key Features</h2>
          <ul class="space-y-3">
            {data.features.map((feature: string) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-slate-300">{feature}</span>
              </li>
            ))}
          </ul>
          
          {data.uniqueFeatures && data.uniqueFeatures.length > 0 && (
            <>
              <h3 class="text-lg font-semibold text-white mt-8 mb-4">Unique Features</h3>
              <ul class="space-y-3">
                {data.uniqueFeatures.map((feature: string) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-indigo-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                    <span class="text-slate-300">{feature}</span>
                  </li>
                ))}
              </ul>
            </>
          )}
          
          {data.limitations && data.limitations.length > 0 && (
            <>
              <h3 class="text-lg font-semibold text-white mt-8 mb-4">Limitations</h3>
              <ul class="space-y-3">
                {data.limitations.map((limitation: string) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-orange-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <span class="text-slate-300">{limitation}</span>
                  </li>
                ))}
              </ul>
            </>
          )}
        </div>
        
        <!-- Pricing -->
        <div class="card p-6">
          <h2 class="text-xl font-semibold text-white mb-6">Pricing</h2>
          
          <div class="mb-6">
            <div class="flex items-center gap-2 mb-2">
              <span class="text-slate-400">Pricing Model:</span>
              <span class="text-white font-medium capitalize">{data.pricing.model}</span>
            </div>
            {data.pricing.startingPrice && (
              <div class="flex items-center gap-2">
                <span class="text-slate-400">Starting at:</span>
                <span class="text-white font-medium">{data.pricing.startingPrice}</span>
              </div>
            )}
          </div>
          
          {data.pricing.tiers && data.pricing.tiers.length > 0 && (
            <div class="space-y-4">
              {data.pricing.tiers.map((tier: any) => (
                <div class="p-4 rounded-xl bg-slate-800/50 border border-slate-700/50">
                  <div class="flex justify-between items-center mb-3">
                    <h3 class="font-semibold text-white">{tier.name}</h3>
                    <span class="text-indigo-400 font-bold">{tier.price}</span>
                  </div>
                  <ul class="space-y-2">
                    {tier.features.map((feature: string) => (
                      <li class="flex items-start gap-2 text-sm">
                        <svg class="w-4 h-4 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="text-slate-400">{feature}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="py-12 bg-slate-800/30">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-xl font-semibold text-white mb-6">Best Use Cases</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4">
        {data.useCases.map((useCase: string) => (
          <div class="p-4 rounded-xl bg-slate-800/50 border border-slate-700/50 text-center">
            <span class="text-slate-300">{useCase}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Aspect Ratios -->
  <section class="py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-xl font-semibold text-white mb-6">Supported Aspect Ratios</h2>
      <div class="flex flex-wrap gap-3">
        {data.capabilities.aspectRatios.map((ratio: string) => (
          <span class="px-4 py-2 rounded-lg bg-slate-800 text-slate-300 border border-slate-700">
            {ratio}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Last Updated -->
  <section class="py-8 border-t border-slate-700/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-slate-500 text-sm text-center">
        Last updated: {data.lastUpdated} | Release date: {data.releaseDate || 'N/A'}
      </p>
    </div>
  </section>
</BaseLayout>

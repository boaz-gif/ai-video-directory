---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import type { InferEntrySchema } from 'astro:content';

export async function getStaticPaths() {
  const models = await getCollection('models');
  return models.map((model) => ({
    params: { slug: model.id },
    props: { model },
  }));
}

const { model } = Astro.props;
const { data } = model;

// Type aliases for better type safety
type ModelData = InferEntrySchema<'models'>;
type PricingTier = NonNullable<ModelData['pricing']['tiers']>[number];
type NewsItem = NonNullable<ModelData['latestNews']>[number];
type VersionHistory = NonNullable<ModelData['iterationHistory']>[number];
type VideoItem = NonNullable<ModelData['videoGallery']>[number];

// Status badge styling
const statusStyles: Record<string, string> = {
  released: 'badge-released',
  beta: 'badge-beta',
  alpha: 'badge-alpha',
  waitlist: 'badge-waitlist',
  research: 'badge-research',
};

// Category display names
const categoryNames: Record<string, string> = {
  'text-to-video': 'Text-to-Video',
  'image-to-video': 'Image-to-Video',
  'video-to-video': 'Video-to-Video',
  'animation': 'Animation',
};

// Render star rating
const renderStars = (rating: number) => {
  return Array.from({ length: 5 }, (_, i) => 
    i < rating ? '★' : '☆'
  ).join('');
};

// JSON-LD Product schema for SEO
const productSchema = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: data.name,
  description: data.description,
  applicationCategory: 'MultimediaApplication',
  operatingSystem: data.access.platform.join(', '),
  offers: {
    '@type': 'Offer',
    price: data.pricing.startingPrice ? data.pricing.startingPrice.replace(/[^0-9.]/g, '') : '0',
    priceCurrency: 'USD',
    availability: data.status === 'released' ? 'https://schema.org/InStock' : 'https://schema.org/PreOrder',
  },
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: ((data.quality.outputQuality + data.quality.consistency + data.quality.speed) / 3).toFixed(1),
    bestRating: '5',
    worstRating: '1',
    ratingCount: '1',
  },
  provider: {
    '@type': 'Organization',
    name: data.company,
  },
};

// JSON-LD BreadcrumbList schema
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://aivideodirectory.com/',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Models',
      item: 'https://aivideodirectory.com/models/',
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: data.name,
      item: `https://aivideodirectory.com/models/${model.id}/`,
    },
  ],
};
---

<BaseLayout title={data.name} description={data.shortDescription}>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <!-- Breadcrumb -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <nav class="flex items-center gap-2 text-sm text-slate-400">
      <a href="/" class="hover:text-white transition-colors">Home</a>
      <span>/</span>
      <a href="/#models" class="hover:text-white transition-colors">Models</a>
      <span>/</span>
      <span class="text-white">{data.name}</span>
    </nav>
  </div>

  <!-- Hero Section -->
  <section class="py-8 sm:py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Main Info -->
        <div class="lg:col-span-2">
          <div class="flex items-start gap-4 mb-6">
            <div>
              <h1 class="text-3xl sm:text-4xl font-bold text-white mb-2">{data.name}</h1>
              <p class="text-xl text-slate-400">{data.company}</p>
            </div>
            <span class={`badge ${statusStyles[data.status]} mt-2`}>
              {data.status}
            </span>
          </div>
          
          <p class="text-lg text-slate-300 mb-6">
            {data.description}
          </p>
          
          <!-- Categories -->
          <div class="flex flex-wrap gap-2 mb-6">
            {data.categories.map((category: string) => (
              <a href={`/categories/${category}`} class="tag hover:bg-indigo-500/20 hover:text-indigo-400 transition-colors">
                {categoryNames[category] || category}
              </a>
            ))}
          </div>
          
          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-4">
            <a 
              href={data.access.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="btn-primary inline-flex items-center gap-2"
            >
              <span>Visit Platform</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
            {data.access.apiDocs && (
              <a 
                href={data.access.apiDocs} 
                target="_blank" 
                rel="noopener noreferrer"
                class="btn-secondary inline-flex items-center gap-2"
              >
                <span>API Docs</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              </a>
            )}
          </div>
        </div>
        
        <!-- Quick Stats Card -->
        <div class="card p-6">
          <h3 class="text-lg font-semibold text-white mb-4">Quick Stats</h3>
          
          <div class="space-y-4">
            <div class="flex justify-between items-center py-2 border-b border-slate-700/50">
              <span class="text-slate-400">Max Resolution</span>
              <span class="text-white font-medium">{data.capabilities.maxResolution}</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-slate-700/50">
              <span class="text-slate-400">Max Duration</span>
              <span class="text-white font-medium">{data.capabilities.maxDuration}</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-slate-700/50">
              <span class="text-slate-400">Frame Rate</span>
              <span class="text-white font-medium">{data.capabilities.frameRate || 'N/A'}</span>
            </div>
            <div class="flex justify-between items-center py-2 border-b border-slate-700/50">
              <span class="text-slate-400">Audio Generation</span>
              <span class="text-white font-medium">{data.capabilities.audioGeneration ? 'Yes' : 'No'}</span>
            </div>
            <div class="flex justify-between items-center py-2">
              <span class="text-slate-400">Platforms</span>
              <span class="text-white font-medium capitalize">{data.access.platform.join(', ')}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quality Ratings -->
  <section class="py-8 border-y border-slate-700/50 bg-slate-800/30">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-xl font-semibold text-white mb-6">Quality Ratings</h2>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
        <div class="text-center p-4 rounded-xl bg-slate-800/50">
          <p class="text-slate-400 text-sm mb-2">Output Quality</p>
          <p class="text-3xl font-bold text-yellow-400 mb-1">{data.quality.outputQuality}/5</p>
          <p class="text-yellow-400">{renderStars(data.quality.outputQuality)}</p>
        </div>
        <div class="text-center p-4 rounded-xl bg-slate-800/50">
          <p class="text-slate-400 text-sm mb-2">Consistency</p>
          <p class="text-3xl font-bold text-yellow-400 mb-1">{data.quality.consistency}/5</p>
          <p class="text-yellow-400">{renderStars(data.quality.consistency)}</p>
        </div>
        <div class="text-center p-4 rounded-xl bg-slate-800/50">
          <p class="text-slate-400 text-sm mb-2">Speed</p>
          <p class="text-3xl font-bold text-yellow-400 mb-1">{data.quality.speed}/5</p>
          <p class="text-yellow-400">{renderStars(data.quality.speed)}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Features & Pricing -->
  <section class="py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Features -->
        <div class="card p-6">
          <h2 class="text-xl font-semibold text-white mb-6">Key Features</h2>
          <ul class="space-y-3">
            {data.features.map((feature: string) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-slate-300">{feature}</span>
              </li>
            ))}
          </ul>
          
          {data.uniqueFeatures && data.uniqueFeatures.length > 0 && (
            <>
              <h3 class="text-lg font-semibold text-white mt-8 mb-4">Unique Features</h3>
              <ul class="space-y-3">
                {data.uniqueFeatures.map((feature: string) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-indigo-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                    <span class="text-slate-300">{feature}</span>
                  </li>
                ))}
              </ul>
            </>
          )}
          
          {data.limitations && data.limitations.length > 0 && (
            <>
              <h3 class="text-lg font-semibold text-white mt-8 mb-4">Limitations</h3>
              <ul class="space-y-3">
                {data.limitations.map((limitation: string) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-orange-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <span class="text-slate-300">{limitation}</span>
                  </li>
                ))}
              </ul>
            </>
          )}
        </div>
        
        <!-- Pricing -->
        <div class="card p-6">
          <h2 class="text-xl font-semibold text-white mb-6">Pricing</h2>
          
          <div class="mb-6">
            <div class="flex items-center gap-2 mb-2">
              <span class="text-slate-400">Pricing Model:</span>
              <span class="text-white font-medium capitalize">{data.pricing.model}</span>
            </div>
            {data.pricing.startingPrice && (
              <div class="flex items-center gap-2">
                <span class="text-slate-400">Starting at:</span>
                <span class="text-white font-medium">{data.pricing.startingPrice}</span>
              </div>
            )}
          </div>
          
          {data.pricing.tiers && data.pricing.tiers.length > 0 && (
            <div class="space-y-4">
              {data.pricing.tiers.map((tier: PricingTier) => (
                <div class="p-4 rounded-xl bg-slate-800/50 border border-slate-700/50">
                  <div class="flex justify-between items-center mb-3">
                    <h3 class="font-semibold text-white">{tier.name}</h3>
                    <span class="text-indigo-400 font-bold">{tier.price}</span>
                  </div>
                  <ul class="space-y-2">
                    {tier.features.map((feature: string) => (
                      <li class="flex items-start gap-2 text-sm">
                        <svg class="w-4 h-4 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="text-slate-400">{feature}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="py-12 bg-slate-800/30">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-xl font-semibold text-white mb-6">Best Use Cases</h2>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4">
        {data.useCases.map((useCase: string) => (
          <div class="p-4 rounded-xl bg-slate-800/50 border border-slate-700/50 text-center">
            <span class="text-slate-300">{useCase}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Aspect Ratios -->
  <section class="py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-xl font-semibold text-white mb-6">Supported Aspect Ratios</h2>
      <div class="flex flex-wrap gap-3">
        {data.capabilities.aspectRatios.map((ratio: string) => (
          <span class="px-4 py-2 rounded-lg bg-slate-800 text-slate-300 border border-slate-700">
            {ratio}
          </span>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest News & Updates (v1.1) -->
  {data.latestNews && data.latestNews.length > 0 && (
    <section class="py-12 bg-slate-800/30">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-xl font-semibold text-white mb-6">Latest News & Updates</h2>
        <div class="space-y-4">
          {data.latestNews.map((news: NewsItem) => (
            <div class="card p-4 sm:p-6 hover:border-indigo-500/30 transition-colors">
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 mb-3">
                <div class="flex items-center gap-3">
                  <span class={`px-2 py-1 text-xs font-medium rounded-full ${
                    news.type === 'release' ? 'bg-green-500/20 text-green-400' :
                    news.type === 'feature' ? 'bg-blue-500/20 text-blue-400' :
                    news.type === 'announcement' ? 'bg-purple-500/20 text-purple-400' :
                    'bg-orange-500/20 text-orange-400'
                  }`}>
                    {news.type.charAt(0).toUpperCase() + news.type.slice(1)}
                  </span>
                  <span class="text-slate-500 text-sm">{news.date}</span>
                </div>
                {news.url && (
                  <a 
                    href={news.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-indigo-400 hover:text-indigo-300 text-sm flex items-center gap-1"
                  >
                    Read more
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">{news.title}</h3>
              <p class="text-slate-400">{news.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Iteration History (v1.1) -->
  {data.iterationHistory && data.iterationHistory.length > 0 && (
    <section class="py-12">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-xl font-semibold text-white mb-6">Version History</h2>
        <div class="relative">
          <!-- Timeline line -->
          <div class="absolute left-4 sm:left-8 top-0 bottom-0 w-0.5 bg-slate-700"></div>
          
          <div class="space-y-8">
            {data.iterationHistory.map((version: VersionHistory, index: number) => (
              <div class="relative pl-12 sm:pl-20">
                <!-- Timeline dot -->
                <div class={`absolute left-2 sm:left-6 w-4 h-4 rounded-full border-2 ${
                  index === 0 ? 'bg-indigo-500 border-indigo-400' : 'bg-slate-800 border-slate-600'
                }`}></div>
                
                <div class="card p-4 sm:p-6">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-4">
                    <div>
                      <h3 class="text-lg font-semibold text-white">Version {version.version}</h3>
                      <p class="text-slate-500 text-sm">{version.releaseDate}</p>
                    </div>
                  </div>
                  
                  {version.majorChanges && version.majorChanges.length > 0 && (
                    <div class="mb-4">
                      <h4 class="text-sm font-medium text-slate-400 mb-2">Major Changes</h4>
                      <ul class="space-y-2">
                        {version.majorChanges.map((change: string) => (
                          <li class="flex items-start gap-2 text-slate-300">
                            <svg class="w-4 h-4 text-indigo-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                            </svg>
                            {change}
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                  
                  {version.newFeatures && version.newFeatures.length > 0 && (
                    <div class="mb-4">
                      <h4 class="text-sm font-medium text-slate-400 mb-2">New Features</h4>
                      <ul class="space-y-2">
                        {version.newFeatures.map((feature: string) => (
                          <li class="flex items-start gap-2 text-slate-300">
                            <svg class="w-4 h-4 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            {feature}
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                  
                  {version.improvements && version.improvements.length > 0 && (
                    <div>
                      <h4 class="text-sm font-medium text-slate-400 mb-2">Improvements</h4>
                      <ul class="space-y-2">
                        {version.improvements.map((improvement: string) => (
                          <li class="flex items-start gap-2 text-slate-300">
                            <svg class="w-4 h-4 text-blue-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                            </svg>
                            {improvement}
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- User Ratings (v1.1) -->
  {data.ratings && (
    <section class="py-12 bg-slate-800/30">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-xl font-semibold text-white mb-6">Community Ratings</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Overall Rating -->
          <div class="card p-6 text-center">
            <p class="text-5xl font-bold text-white mb-2">{data.ratings?.averageScore.toFixed(1)}</p>
            <p class="text-2xl text-yellow-400 mb-2">{renderStars(Math.round(data.ratings?.averageScore ?? 0))}</p>
            <p class="text-slate-400">Based on {data.ratings?.totalReviews.toLocaleString() ?? 0} reviews</p>
          </div>
          
          <!-- Rating Breakdown -->
          {data.ratings?.breakdown && (
            <div class="card p-6">
              <h3 class="text-lg font-semibold text-white mb-4">Rating Breakdown</h3>
              <div class="space-y-3">
                {[5, 4, 3, 2, 1].map((stars) => {
                  const breakdown = data.ratings?.breakdown;
                  const count = breakdown ? breakdown[stars === 5 ? 'five' : stars === 4 ? 'four' : stars === 3 ? 'three' : stars === 2 ? 'two' : 'one'] : 0;
                  const totalReviews = data.ratings?.totalReviews ?? 1;
                  const percentage = (count / totalReviews) * 100;
                  return (
                    <div class="flex items-center gap-3">
                      <span class="text-yellow-400 w-12">{stars} ★</span>
                      <div class="flex-1 h-2 bg-slate-700 rounded-full overflow-hidden">
                        <div 
                          class="h-full bg-yellow-400 rounded-full transition-all duration-300"
                          style={`width: ${percentage}%`}
                        ></div>
                      </div>
                      <span class="text-slate-400 text-sm w-16 text-right">{count.toLocaleString()}</span>
                    </div>
                  );
                })}
              </div>
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Video Gallery (v1.1) -->
  {data.videoGallery && data.videoGallery.length > 0 && (
    <section class="py-12" id="video-gallery">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
          <h2 class="text-xl font-semibold text-white">Example Videos</h2>
          <div class="flex flex-wrap gap-2">
            <button 
              class="gallery-filter active px-3 py-1.5 text-sm rounded-lg bg-indigo-500/20 text-indigo-400 border border-indigo-500/30 hover:bg-indigo-500/30 transition-colors"
              data-filter="all"
            >
              All
            </button>
            <button 
              class="gallery-filter px-3 py-1.5 text-sm rounded-lg bg-slate-800 text-slate-400 border border-slate-700 hover:border-slate-600 transition-colors"
              data-filter="4K"
            >
              4K
            </button>
            <button 
              class="gallery-filter px-3 py-1.5 text-sm rounded-lg bg-slate-800 text-slate-400 border border-slate-700 hover:border-slate-600 transition-colors"
              data-filter="1080p"
            >
              1080p
            </button>
          </div>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" id="gallery-grid">
          {data.videoGallery.map((video: VideoItem, index: number) => (
            <div 
              class="gallery-item card overflow-hidden group cursor-pointer"
              data-resolution={video.resolution}
              data-index={index}
            >
              <div class="relative aspect-video bg-slate-800">
                <img 
                  src={video.thumbnailUrl} 
                  alt={video.title}
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                  <div class="w-16 h-16 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center">
                    <svg class="w-8 h-8 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z" />
                    </svg>
                  </div>
                </div>
                <div class="absolute top-2 right-2 flex gap-2">
                  <span class="px-2 py-1 text-xs font-medium rounded bg-black/60 text-white">{video.duration}</span>
                  <span class="px-2 py-1 text-xs font-medium rounded bg-indigo-500/80 text-white">{video.resolution}</span>
                </div>
              </div>
              <div class="p-4">
                <h3 class="font-semibold text-white mb-1 group-hover:text-indigo-400 transition-colors">{video.title}</h3>
                <p class="text-sm text-slate-400 line-clamp-2">{video.description}</p>
                {video.prompt && (
                  <p class="text-xs text-slate-500 mt-2 italic">"{video.prompt}"</p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Video Modal -->
      <div id="video-modal" class="fixed inset-0 z-50 hidden">
        <div class="absolute inset-0 bg-black/90 backdrop-blur-sm" id="modal-backdrop"></div>
        <div class="relative z-10 flex items-center justify-center min-h-screen p-4">
          <div class="bg-slate-900 rounded-2xl overflow-hidden max-w-4xl w-full shadow-2xl">
            <div class="relative aspect-video bg-black">
              <video 
                id="modal-video" 
                class="w-full h-full"
                controls
                playsinline
              >
                <source src="" type="video/mp4" />
              </video>
            </div>
            <div class="p-6">
              <h3 id="modal-title" class="text-xl font-semibold text-white mb-2"></h3>
              <p id="modal-description" class="text-slate-400 mb-4"></p>
              <div class="flex flex-wrap gap-4 text-sm text-slate-500">
                <span id="modal-duration"></span>
                <span id="modal-resolution"></span>
              </div>
            </div>
            <button 
              id="modal-close" 
              class="absolute top-4 right-4 w-10 h-10 rounded-full bg-black/50 text-white hover:bg-black/70 transition-colors flex items-center justify-center"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Developer API Info (v1.1) -->
  {data.developerApi && data.developerApi.available && (
    <section class="py-12 bg-slate-800/30">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-xl font-semibold text-white mb-6">Developer API</h2>
        <div class="card p-6">
          <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <div>
              <p class="text-slate-400 text-sm mb-1">Documentation</p>
              {data.developerApi.documentation ? (
                <a 
                  href={data.developerApi.documentation} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-indigo-400 hover:text-indigo-300 flex items-center gap-1"
                >
                  View Docs
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              ) : (
                <span class="text-slate-500">Not available</span>
              )}
            </div>
            <div>
              <p class="text-slate-400 text-sm mb-1">Pricing</p>
              <p class="text-white">{data.developerApi.pricing || 'Contact for pricing'}</p>
            </div>
            <div>
              <p class="text-slate-400 text-sm mb-1">Rate Limit</p>
              <p class="text-white">{data.developerApi.rateLimit || 'N/A'}</p>
            </div>
            <div>
              <p class="text-slate-400 text-sm mb-1">SDK Languages</p>
              {data.developerApi.sdkLanguages && data.developerApi.sdkLanguages.length > 0 ? (
                <div class="flex flex-wrap gap-2">
                  {data.developerApi.sdkLanguages.map((lang: string) => (
                    <span class="px-2 py-1 text-xs rounded bg-slate-700 text-slate-300">{lang}</span>
                  ))}
                </div>
              ) : (
                <span class="text-slate-500">N/A</span>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Last Updated -->
  <section class="py-8 border-t border-slate-700/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-slate-500 text-sm text-center">
        Last updated: {data.lastUpdated} | Release date: {data.releaseDate || 'N/A'}
      </p>
    </div>
  </section>
</BaseLayout>

<script>
  // Video Gallery Filtering
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.gallery-filter');
    const galleryItems = document.querySelectorAll('.gallery-item');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.getAttribute('data-filter');
        
        // Update active state
        filterButtons.forEach(btn => {
          btn.classList.remove('active', 'bg-indigo-500/20', 'text-indigo-400', 'border-indigo-500/30');
          btn.classList.add('bg-slate-800', 'text-slate-400', 'border-slate-700');
        });
        button.classList.add('active', 'bg-indigo-500/20', 'text-indigo-400', 'border-indigo-500/30');
        button.classList.remove('bg-slate-800', 'text-slate-400', 'border-slate-700');
        
        // Filter items
        galleryItems.forEach(item => {
          const resolution = item.getAttribute('data-resolution');
          const htmlItem = item as HTMLElement;
          if (filter === 'all' || resolution === filter) {
            htmlItem.style.display = 'block';
          } else {
            htmlItem.style.display = 'none';
          }
        });
      });
    });
    
    // Video Modal
    const modal = document.getElementById('video-modal');
    const modalVideo = document.getElementById('modal-video') as HTMLVideoElement;
    const modalTitle = document.getElementById('modal-title');
    const modalDescription = document.getElementById('modal-description');
    const modalDuration = document.getElementById('modal-duration');
    const modalResolution = document.getElementById('modal-resolution');
    const modalClose = document.getElementById('modal-close');
    const modalBackdrop = document.getElementById('modal-backdrop');
    
    galleryItems.forEach(item => {
      item.addEventListener('click', () => {
        // Get video data from the clicked item
        const title = item.querySelector('h3')?.textContent || '';
        const description = item.querySelector('p')?.textContent || '';
        const durationBadge = item.querySelector('.absolute.top-2.right-2 span:first-child')?.textContent || '';
        const resolutionBadge = item.querySelector('.absolute.top-2.right-2 span:last-child')?.textContent || '';
        
        // For now, show placeholder (in production, videoUrl would come from data)
        if (modalTitle) modalTitle.textContent = title;
        if (modalDescription) modalDescription.textContent = description;
        if (modalDuration) modalDuration.textContent = `Duration: ${durationBadge}`;
        if (modalResolution) modalResolution.textContent = `Resolution: ${resolutionBadge}`;
        
        if (modal) modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      });
    });
    
    const closeModal = () => {
      if (modal) modal.classList.add('hidden');
      if (modalVideo) {
        modalVideo.pause();
        modalVideo.currentTime = 0;
      }
      document.body.style.overflow = '';
    };
    
    if (modalClose) modalClose.addEventListener('click', closeModal);
    if (modalBackdrop) modalBackdrop.addEventListener('click', closeModal);
    
    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
        closeModal();
      }
    });
  });
</script>

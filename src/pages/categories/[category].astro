---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ModelCard from '../../components/ModelCard.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const categories = ['text-to-video', 'image-to-video', 'video-to-video', 'animation'];
  return categories.map((category) => ({
    params: { category },
  }));
}

const { category } = Astro.params as { category: string };

// Category display names and descriptions
const categoryInfo: Record<string, { name: string; description: string; icon: string }> = {
  'text-to-video': {
    name: 'Text-to-Video',
    description: 'Generate videos from text descriptions. Simply describe what you want to see, and AI creates the video.',
    icon: 'ðŸ“'
  },
  'image-to-video': {
    name: 'Image-to-Video',
    description: 'Animate static images into videos. Upload an image and watch it come to life with motion.',
    icon: 'ðŸ–¼ï¸'
  },
  'video-to-video': {
    name: 'Video-to-Video',
    description: 'Transform existing videos with AI. Apply style transfers, enhance quality, or modify content.',
    icon: 'ðŸŽ¬'
  },
  'animation': {
    name: 'Animation',
    description: 'Create animated content from scratch or transform images into animations.',
    icon: 'âœ¨'
  }
};

const categories = Object.keys(categoryInfo);

// Get all models and filter by category
const allModels = await getCollection('models');
const models = allModels.filter(model => model.data.categories.includes(category));

// Sort models: featured first, then alphabetically
const sortedModels = models.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.name.localeCompare(b.data.name);
});

const info = categoryInfo[category];
---

<BaseLayout title={info.name} description={info.description}>
  <!-- Breadcrumb -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <nav class="flex items-center gap-2 text-sm text-slate-400">
      <a href="/" class="hover:text-white transition-colors">Home</a>
      <span>/</span>
      <a href="/categories" class="hover:text-white transition-colors">Categories</a>
      <span>/</span>
      <span class="text-white">{info.name}</span>
    </nav>
  </div>

  <!-- Hero Section -->
  <section class="hero-gradient py-12 sm:py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <div class="text-5xl mb-4">{info.icon}</div>
        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          {info.name} Models
        </h1>
        <p class="text-lg text-slate-400">
          {info.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-6 border-y border-slate-700/50 bg-slate-800/30">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-center gap-8">
        <div class="text-center">
          <p class="text-2xl font-bold text-white">{models.length}</p>
          <p class="text-slate-400 text-sm">Models</p>
        </div>
        <div class="text-center">
          <p class="text-2xl font-bold text-white">{models.filter(m => m.data.status === 'released').length}</p>
          <p class="text-slate-400 text-sm">Released</p>
        </div>
        <div class="text-center">
          <p class="text-2xl font-bold text-white">{models.filter(m => m.data.pricing.model === 'free' || m.data.pricing.model === 'freemium').length}</p>
          <p class="text-slate-400 text-sm">Free Options</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Category Navigation -->
  <section class="py-6 border-b border-slate-700/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center gap-3">
        {categories.map((cat) => (
          <a 
            href={`/categories/${cat}`}
            class={`px-4 py-2 rounded-lg text-sm font-medium transition-all ${
              cat === category 
                ? 'bg-indigo-500/20 text-indigo-400 border border-indigo-500/30' 
                : 'bg-slate-800 text-slate-300 border border-slate-700 hover:border-indigo-500/50 hover:text-white'
            }`}
          >
            {categoryInfo[cat].icon} {categoryInfo[cat].name}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Models Grid -->
  <section class="py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      {sortedModels.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sortedModels.map((model) => (
            <ModelCard
              name={model.data.name}
              company={model.data.company}
              slug={model.id}
              status={model.data.status}
              shortDescription={model.data.shortDescription}
              categories={model.data.categories}
              pricing={model.data.pricing}
              capabilities={model.data.capabilities}
              quality={model.data.quality}
              featured={model.data.featured}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-16 h-16 mx-auto text-slate-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-xl font-semibold text-white mb-2">No models in this category yet</h3>
          <p class="text-slate-400 mb-6">Check back soon for new additions!</p>
          <a href="/" class="btn-primary inline-flex items-center gap-2">
            <span>Browse All Models</span>
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- CTA -->
  <section class="py-12 bg-gradient-to-r from-indigo-500/10 via-purple-500/10 to-cyan-500/10">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-xl font-bold text-white mb-4">
        Compare {info.name} Models
      </h2>
      <p class="text-slate-400 mb-6">
        Use our comparison tool to find the best model for your needs.
      </p>
      <a href="/compare" class="btn-primary inline-flex items-center gap-2">
        <span>Start Comparing</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>

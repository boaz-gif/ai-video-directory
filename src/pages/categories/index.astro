---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all models
const models = await getCollection('models');

// Define categories with info
const categories = [
  {
    slug: 'text-to-video',
    name: 'Text-to-Video',
    description: 'Generate videos from text descriptions. Simply describe what you want to see, and AI creates the video.',
    icon: 'üìù',
    color: 'from-blue-500 to-cyan-500'
  },
  {
    slug: 'image-to-video',
    name: 'Image-to-Video',
    description: 'Animate static images into videos. Upload an image and watch it come to life with motion.',
    icon: 'üñºÔ∏è',
    color: 'from-purple-500 to-pink-500'
  },
  {
    slug: 'video-to-video',
    name: 'Video-to-Video',
    description: 'Transform existing videos with AI. Apply style transfers, enhance quality, or modify content.',
    icon: 'üé¨',
    color: 'from-orange-500 to-red-500'
  },
  {
    slug: 'animation',
    name: 'Animation',
    description: 'Create animated content from scratch or transform images into animations.',
    icon: '‚ú®',
    color: 'from-green-500 to-teal-500'
  }
];

// Count models per category
const categoryCounts: Record<string, number> = {};
categories.forEach(cat => {
  categoryCounts[cat.slug] = models.filter(m => m.data.categories.includes(cat.slug)).length;
});
---

<BaseLayout title="Categories" description="Browse AI video generation models by category. Find the perfect tool for text-to-video, image-to-video, video-to-video, or animation.">
  <!-- Breadcrumb -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <nav class="flex items-center gap-2 text-sm text-slate-400">
      <a href="/" class="hover:text-white transition-colors">Home</a>
      <span>/</span>
      <span class="text-white">Categories</span>
    </nav>
  </div>

  <!-- Hero Section -->
  <section class="hero-gradient py-12 sm:py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          Browse by Category
        </h1>
        <p class="text-lg text-slate-400">
          Find the perfect AI video generation tool based on your specific needs. Each category offers unique capabilities for different use cases.
        </p>
      </div>
    </div>
  </section>

  <!-- Categories Grid -->
  <section class="py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {categories.map((category) => (
          <a 
            href={`/categories/${category.slug}`}
            class="card group p-6 sm:p-8 relative overflow-hidden"
          >
            <!-- Background Gradient -->
            <div class={`absolute inset-0 bg-gradient-to-br ${category.color} opacity-0 group-hover:opacity-10 transition-opacity`}></div>
            
            <div class="relative">
              <!-- Icon & Title -->
              <div class="flex items-center gap-4 mb-4">
                <div class="text-4xl">{category.icon}</div>
                <div>
                  <h2 class="text-xl font-bold text-white group-hover:text-indigo-400 transition-colors">
                    {category.name}
                  </h2>
                  <p class="text-slate-400 text-sm">
                    {categoryCounts[category.slug]} models
                  </p>
                </div>
              </div>
              
              <!-- Description -->
              <p class="text-slate-300 mb-4">
                {category.description}
              </p>
              
              <!-- Arrow -->
              <div class="flex items-center gap-2 text-indigo-400 group-hover:text-indigo-300 transition-colors">
                <span class="text-sm font-medium">Explore models</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- All Models CTA -->
  <section class="py-12 bg-slate-800/30">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-xl font-bold text-white mb-4">
        Want to See All Models?
      </h2>
      <p class="text-slate-400 mb-6">
        Browse our complete collection of AI video generation models.
      </p>
      <a href="/" class="btn-primary inline-flex items-center gap-2">
        <span>View All Models</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
